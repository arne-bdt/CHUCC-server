<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
          "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
          "https://checkstyle.org/dtds/configuration_1_3.dtd">

<!--
  Custom Checkstyle configuration that adds unused imports and TODO comment
  detection on top of Google Java Style checks.

  This configuration matches the issues reported by VS Code / Eclipse JDT.

  Strategy: Use google_checks.xml as base, then add our custom checks.
-->
<module name="Checker">
  <property name="charset" value="UTF-8"/>
  <property name="severity" value="warning"/>
  <property name="fileExtensions" value="java"/>

  <module name="TreeWalker">

    <!-- ============================================================ -->
    <!-- ADDITIONS to google_checks.xml                               -->
    <!-- These rules detect unused code matching VS Code warnings     -->
    <!-- ============================================================ -->

    <!-- Detect unused imports (not in google_checks.xml) -->
    <module name="UnusedImports">
      <property name="processJavadoc" value="false"/>
    </module>

    <!-- Detect TODO/FIXME comments -->
    <module name="TodoComment">
      <property name="format" value="(TODO)|(FIXME)|(XXX)"/>
      <property name="severity" value="warning"/>
    </module>

  </module>
</module>
