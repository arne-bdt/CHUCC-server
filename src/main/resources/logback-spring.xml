<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender with correlation ID support for distributed tracing -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%X{correlationId}] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Application logs -->
    <logger name="org.chucc" level="INFO"/>

    <!-- Reduce Spring Boot noise -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.springframework.boot" level="WARN"/>
    <logger name="org.springframework.kafka" level="WARN"/>

    <!-- Reduce Kafka noise -->
    <logger name="org.apache.kafka" level="WARN"/>
    <logger name="kafka" level="WARN"/>

    <!-- Reduce Jena noise -->
    <logger name="org.apache.jena" level="WARN"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
