<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for test output -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Reduce Spring Boot noise -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.springframework.boot" level="WARN"/>
    <logger name="org.springframework.test.context" level="WARN"/>
    <logger name="org.springframework.kafka" level="WARN"/>

    <!-- Reduce Kafka noise -->
    <logger name="org.apache.kafka" level="WARN"/>
    <logger name="kafka" level="WARN"/>

    <!-- Reduce Testcontainers noise -->
    <logger name="org.testcontainers" level="ERROR"/>
    <logger name="com.github.dockerjava" level="ERROR"/>
    <logger name="tc" level="ERROR"/>

    <!-- Reduce Hibernate Validator noise -->
    <logger name="org.hibernate.validator" level="WARN"/>

    <!-- Reduce Tomcat and web server noise -->
    <logger name="org.apache.catalina" level="WARN"/>
    <logger name="org.apache.coyote" level="WARN"/>
    <logger name="org.apache.tomcat" level="WARN"/>

    <!-- Keep application logs visible -->
    <logger name="org.chucc" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
