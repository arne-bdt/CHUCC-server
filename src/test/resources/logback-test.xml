<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for test output with correlation ID support -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%X{correlationId}] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Reduce Spring Boot noise -->
    <logger name="org.springframework" level="ERROR"/>
    <logger name="org.springframework.boot" level="ERROR"/>
    <logger name="org.springframework.boot.env" level="ERROR"/>
    <logger name="org.springframework.boot.web" level="ERROR"/>
    <logger name="org.springframework.test.context" level="WARN"/>
    <logger name="org.springframework.kafka" level="WARN"/>
    <logger name="org.springframework.web" level="ERROR"/>

    <!-- Reduce Kafka noise -->
    <logger name="org.apache.kafka" level="WARN"/>
    <logger name="kafka" level="WARN"/>

    <!-- Reduce Testcontainers noise -->
    <logger name="org.testcontainers" level="ERROR"/>
    <logger name="com.github.dockerjava" level="ERROR"/>
    <logger name="tc" level="ERROR"/>

    <!-- Reduce Hibernate Validator noise -->
    <logger name="org.hibernate.validator" level="WARN"/>

    <!-- Reduce Tomcat and web server noise -->
    <logger name="org.apache.catalina" level="WARN"/>
    <logger name="org.apache.coyote" level="WARN"/>
    <logger name="org.apache.tomcat" level="WARN"/>

    <!-- Suppress expected error messages from tests that verify error handling -->
    <logger name="org.zalando.problem.spring.common.AdviceTraits" level="ERROR"/>
    <logger name="org.apache.jena.riot" level="OFF"/>
    <logger name="org.chucc.vcserver.projection.ReadModelProjector" level="OFF"/>

    <!-- Suppress INFO/WARN from command handlers in unit tests -->
    <logger name="org.chucc.vcserver.command.DeleteBranchCommandHandler" level="ERROR"/>
    <logger name="org.chucc.vcserver.command.DeleteDatasetCommandHandler" level="ERROR"/>

    <!-- Application logs at INFO level by default (use -Dlogging.level.org.chucc=DEBUG to enable debug logs) -->
    <logger name="org.chucc" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
